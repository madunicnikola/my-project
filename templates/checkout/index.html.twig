{% extends 'layout.html.twig' %}

{% block body %}
<div class="product-detail-container" style="max-width: 800px; margin: 30px auto;">
    <h1 style="text-align: center; margin-bottom: 30px;">Checkout</h1>
    
    <div style="display: flex; justify-content: space-between; margin-bottom: 30px;">
        <a href="{{ path('checkout_address') }}" class="add-cart-button" style="flex: 1; text-align: center; text-decoration: none;">
            Begin Checkout
        </a>
    </div>
    
    <a href="{{ path('cart') }}" class="back-link" style="display: inline-flex; align-items: center; gap: 8px; margin: 10px 0; color: #4b5563; text-decoration: none; font-weight: 500; transition: color 0.2s;">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" fill="currentColor"/>
        </svg>
        Back to Cart
    </a>
</div>
{% endblock %}